{
  "name": "web-exporter",
  "version": "0.0.0",
  "description": "A webextension to export data, media from websites.",
  "author": "eight04 <eight04@gmail.com>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint . --cache && stylelint 'src/**/*.{css,scss}'",
    "test": "npm run lint && npm run build-src && web-ext lint",
    "start": "web-ext run",
    "start-chrome": "web-ext run --target chromium",
    "build": "run-s build-version build-site build-src build-artifact",
    "build-src": "shx rm -rf build/* && rollup -c",
    "build-site": "node tools/site-index.mjs",
    "build-version": "sync-version src/static/manifest.json",
    "build-watch": "rollup -c -w",
    "build-artifact": "shx rm -rf web-ext-artifacts/* && web-ext build --ignore-files **/*.js.map && (git archive -o web-ext-artifacts/source.zip HEAD || exit 0)",
    "dev": "run-p -r build-watch start",
    "preversion": "npm test",
    "version": "npm run build-version && git add .",
    "postversion": "git push --follow-tags && npm run build",
    "changelog": "node tools/changelog.mjs"
  },
  "eslintIgnore": [
    "build",
    "chrome"
  ],
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-yaml": "^4.1.2",
    "@web/rollup-plugin-copy": "^0.5.1",
    "browserslist": "^4.26.3",
    "eslint": "^9.37.0",
    "globals": "^16.4.0",
    "npm-run-all": "^4.1.5",
    "rollup": "^4.52.4",
    "rollup-plugin-cjs-es": "^3.0.0",
    "rollup-plugin-iife": "^0.7.1",
    "rollup-plugin-shim": "^1.0.0",
    "rollup-plugin-write-output": "^0.2.1",
    "shx": "^0.4.0",
    "stylelint": "^16.25.0",
    "stylelint-browser-compat": "^1.0.0-beta.178",
    "stylelint-config-standard": "^39.0.1",
    "sync-version": "^1.1.0",
    "tiny-glob": "^0.2.9",
    "web-ext": "^9.0.0",
    "webext-menus": "^0.3.2",
    "webext-pref": "^0.6.0",
    "webext-pref-ui": "^0.2.1",
    "webextension-polyfill": "^0.12.0"
  },
  "repository": "eight04/web-exporter",
  "private": true,
  "dependencies": {
    "@eight04/idb-storage": "^0.4.2",
    "dexie": "^4.2.1"
  }
}
